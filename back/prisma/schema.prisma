// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String

  @@map("users")
}

model Drug{
  id    Int     @id @default(autoincrement())
  name  String
  image String 
  description String
  miligram Float?
  amount Int?
  price Int
  composition String?

  @@map("drugs")
}